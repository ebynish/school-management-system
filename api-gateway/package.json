    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^7.4.2",
    "axios": "^1.7.9",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "mongoose": "^8.8.4",
    "multer": "^1.4.5-lts.1",
    "passport-jwt": "^4.0.1",
